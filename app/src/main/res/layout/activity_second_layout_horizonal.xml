<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_292521"
    tools:context="com.dev.liji.materialdesigncolor.activity.SecondLayoutHorizonalActivity">

    <com.dev.liji.materialdesigncolor.widget.Headview
        android:id="@+id/headview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.dev.liji.materialdesigncolor.widget.Headview>

    <com.dev.liji.materialdesigncolor.widget.HorizonTouchRecyclerView
        android:id="@+id/recycler_data"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/headview" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recycler_data"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp"
        android:text="Red"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:text="左右滑动查看全部颜色"
        android:textColor="@color/white"
        android:textSize="20sp"
          />
</RelativeLayout>
